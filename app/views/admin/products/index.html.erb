<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Prise</th>
      <th>Discription</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.prise %></td>
        <td><%= product.discription %></td>
          
        <%#byebug%>
        <td><%= link_to 'Show', admin_category_product_path(product.category ,product) %></td>
        <td><%= link_to 'Edit', edit_admin_category_product_path(product.category ,product) %></td>
        <td><%= link_to 'Destroy', admin_category_product_path(product.category ,product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</tableP


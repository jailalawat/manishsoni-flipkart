<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Prise</th>
      <th>Discription</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.prise %></td>
        <td><%= product.discription %></td>
        <td> <%= image_tag(product.image.url(:thumb)) %><br></td>
        <td><%= link_to "Add to card", add_to_card_path(product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>